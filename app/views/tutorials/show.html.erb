<%=link_to "Home", root_path %>
<br>
<%=link_to "Tutorials", tutorials_path %>

<% if current_user.role.name == "admin" || current_user.role.name == "moderator" %>

  <h1>Tutorial: <%= @tutorial.name %> </h1>

  <%# A table of completions %>
  <h1>Completions</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>  
        <th scope="col">UID</th>
        <th scope="col">Tutorial Name</th>
        <th scope="col">Tutorial ID</th>
        <th scope="col">Completion time</th>
      </tr>
    </thead>
    <tbody>
      <% @tutorial.completions.each do |completion| %>
        <tr>
          <td><%= completion.first_name %></td>
          <td><%= completion.last_name %></td>
          <td><%= completion.uid %></td>
          <td><%= completion.tutorial.name %></td>
          <td><%= completion.tutorial_id %></td>
          <td><%= completion.completion_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <h1>You are not authorized to view this page.</h1>
    <p> If you need to be authroized to see students' tutorial completions, please contact the website administrator. </p>
<% end %>
