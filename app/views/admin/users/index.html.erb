<%# List users %>
<h1>Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= link_to user.email, admin_user_url(user.id) %></td>
        <td><%= user.role.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>